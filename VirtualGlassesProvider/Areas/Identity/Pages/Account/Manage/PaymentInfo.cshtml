@page
@model VirtualGlassesProvider.Areas.Identity.Pages.Account.Manage.PaymentInfoModel
@{
    ViewData["Title"] = "PaymentInfo";
    ViewData["ActivePage"] = ManageNavPages.PaymentInfo;
}
<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
    <form id="profile-form" method="post">
        <div class="form-group row">
                    <label asp-for="Input.CardHolderName" class="col-sm-4 col-form-label">Card Holder Name</label>
            <input asp-for="Input.CardHolderName" class="form-control" />
        </div>
        <div class="form-group row">
                    <label asp-for="Input.CardNumber" class="col-sm-4 col-form-label">Card Number</label>
            <input asp-for="Input.CardNumber" class="form-control" />
        </div>
        <div class="form-group row">
            <label asp-for="Input.CVV" class="col-sm-4 col-form-label">CVV</label>
            <input asp-for="Input.CVV" class="form-control" />
        </div>
        <div class="form-group row">
            <label asp-for="Input.ExpiryDate" class="col-sm-4 col-form-label">Expiry Date</label>
            <input asp-for="Input.ExpiryDate" class="form-control" />
        </div>
       
        <button type="submit" class="btn btn-primary">Save Payment Info</button>
    </form>
    </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
