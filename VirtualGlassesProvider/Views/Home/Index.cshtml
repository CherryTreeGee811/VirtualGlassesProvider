@model List<VirtualGlassesProvider.Models.DTOs.GlassesDTO>
@{
    ViewData["Title"] = "Home Page";
}
@{
    var addedToCartMessage = TempData["AddedToCartMessage"] as string;
    var addedToWishlistMessage = TempData["AddedToWishlistMessage"] as string;
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        color: #333;
    }
    .card {
        margin-bottom: 30px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: 1px solid #ddd;
        background-color: #fff;
        transition: box-shadow 0.3s ease;
    }

    .card:hover {
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
    }

    .card-body {
        padding: 20px;
        height: 350px;
        width: auto;
    }

    .card-title {
        font-size: 1.25rem;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 1rem;
        margin-bottom: 15px;
    }

    .img-wrapper {
        max-width: 100%;
        height: 13em;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .img-wrapper img{
        max-width: 100%;
        max-height: 100%;
        object-fit: cover;
    }

    .card img {
        max-height: 100%;
    }

    .pagination {
        justify-content: center;
        display: flex;
        list-style: none;
        padding: 0;
    }

        .pagination li {
            margin: 0 5px;
        }

    .price {
        font-size: 1.5rem;
        font-weight: bold;
        color: #007bff;
        margin-bottom: 15px;
    }

    .label-text {
        font-weight: bold;
        color: #555;
        margin-bottom: 5px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }


</style>
<div class="text-center">
    <h1 class="display-4">Welcome To Vision Vogue!</h1>
</div>

@if (!string.IsNullOrEmpty(addedToCartMessage))
{
    <div id="addedToCartMessage" class="alert alert-success" role="alert">
        @addedToCartMessage
    </div>
}

@if (!string.IsNullOrEmpty(addedToWishlistMessage))
{
    <div id="addedToWishlistMessage" class="alert alert-success" role="alert">
        @addedToWishlistMessage
    </div>
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Search" class="form-inline mt-4 mb-4">
            <div class="input-group mb-3">
                <label for="searchString" class="input-group-text">Search for Glasses:</label>
                <input type="search" name="searchString" class="form-control" id="searchString" placeholder="Enter keywords">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>


<div class="row">
    <h1>Our Glasses Collection</h1>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="img-wrapper">
                    <img src="@Url.Content($"~/{item.Image}")" alt="@item.BrandName" />
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.BrandName</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="price">@item.Price.ToString("C")</p>
                    <p class="label-text">Style: <span class="font-weight-bold">@item.Style</span></p>
                    <p class="label-text">Color: <span class="font-weight-bold">@item.Colour</span></p>
                    <a asp-action="Details" asp-controller="Home" class="btn btn-primary" asp-route-id="@item.ID">Details</a>
                    <a asp-action="AddToCart" asp-controller="Home" class="btn btn-success" asp-route-id="@item.ID">Add to Cart</a>
                    <p></p>
                    <a asp-controller="Home" asp-action="AddToWishList" asp-route-id="@item.ID" class="btn btn-success">Add to Wish List</a>
                </div>
            </div>
        </div>
    }
</div>

<script>
    setTimeout(function () {
        var addedToCartMessageElement = document.getElementById('addedToCartMessage');
        if (addedToCartMessageElement) {
            addedToCartMessageElement.remove();
        }
    }, 2000);

    setTimeout(function () {
        var addedToWishlistMessageElement = document.getElementById('addedToWishlistMessage');
        if (addedToWishlistMessageElement) {
            addedToWishlistMessageElement.remove();
        }
    }, 2000);
</script>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</nav>