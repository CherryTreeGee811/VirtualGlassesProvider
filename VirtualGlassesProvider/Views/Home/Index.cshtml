@model List<VirtualGlassesProvider.Models.DTOs.GlassesDTO>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .card {
        margin: 1em;
        box-shadow: 2px 6px 8px 0 rgba(22, 22, 26, 0.18);
        border: none;
    }

    .img-wrapper {
        max-width: 100%;
        height: 13em;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .img-wrapper img{
        max-width: 100%;
        max-height: 100%;
        object-fit: cover;
    }

    .card img {
        max-height: 100%;
    }

    .pagination {
        justify-content: center;
        display: flex;
        list-style: none;
        padding: 0;
    }

        .pagination li {
            margin: 0 5px;
        }
</style>
<div class="text-center">
    <h1 class="display-4">Welcome To Vision Vogue!</h1>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Search" class="form-inline mt-4 mb-4">
            <div class="input-group mb-3">
                <label for="searchString" class="input-group-text">Search for Glasses:</label>
                <input type="search" name="searchString" class="form-control" id="searchString" placeholder="Enter keywords">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>


<div class="row">
    <h1>Our Glasses Collection</h1>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="img-wrapper">
                    <img src="@Url.Content($"~/{item.Image}")" alt="@item.BrandName" />
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.BrandName</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">@item.Price.ToString("C")</p>
                    <p class="card-text">Style: @item.Style</p>
                    <p class="card-text">Color: @item.Colour</p>
                    <a asp-action="Details" asp-controller="Home" class="btn btn-primary" asp-route-id="@item.ID">Details</a>
                    <a asp-action="AddToCart" asp-controller="Home" class="btn btn-success" asp-route-id="@item.ID">Add to Cart</a>
                </div>
            </div>
        </div>
    }
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</nav>