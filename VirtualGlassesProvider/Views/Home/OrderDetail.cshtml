@model List<Order>

<h2>My Orders</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var order in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="img-wrapper">
                        @* <img src="@Url.Content($"~/{item.Image}")" alt="@item.BrandName" /> *@
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@order.BrandName</h5>
                        <p class="label-text">Quantity: @order.Quantity</p>
                        <p class="label-text">Price: &#36;@order.UnitPrice</p>
                        <p class="label-text">Status: @order.Status</p>
                        <p class="label-text">Price per Unit: @order.UnitPrice.ToString("C")</p>
                        <p class="label-text">Total Price: @order.TotalPrice.ToString("C")</p>
                        <p class="label-text">Order Date: @order.OrderDate.ToString("d")</p>
                        <div class="card-footer">
                            Invoice Date: @order.Invoice?.InvoiceDate.ToString("d")
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h3>You have no orders.</h3>
}
