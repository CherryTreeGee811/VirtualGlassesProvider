@model List<VirtualGlassesProvider.Models.DTOs.GlassesDTO>
@{
    ViewData["Title"] = "Search Page";
}

@if (Model.ToList().Count == 0)
{
    <div class="row">
        <h1> No Results Found :(</h1>
        <div>
            <a asp-action="Index" class="btn btn-primary">Back to Home Page</a>
        </div>
    </div>

}
else{
    <div class="row">
        <h1>Your Search Results:</h1>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="img-wrapper">
                        <img src="@Url.Content($"~/{item.Image}")" alt="@item.BrandName">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.BrandName</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="price">&#36;@item.Price.ToString("F")</p>
                        <p class="label-text">Style: @item.Style</p>
                        <p class="label-text">Colour: @item.Colour</p>
                        <a asp-action="Details" asp-controller="Home" class="btn btn-primary" asp-route-id="@item.ID">Details</a>
                        <a asp-area="Member" asp-action="AddToCart" asp-controller="Home" class="btn btn-success" asp-route-id="@item.ID">Add to Cart</a>
                        <p></p>
                        <a asp-controller="Home" asp-action="AddToWishList" asp-route-id="@item.ID" class="btn btn-success">Add to Wish List</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div>
        <a asp-action="Index" class="btn btn-primary">Back to Home Page</a>
    </div>

}
