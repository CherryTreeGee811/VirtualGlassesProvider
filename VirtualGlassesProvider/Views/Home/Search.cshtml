@model List<VirtualGlassesProvider.Models.DTOs.GlassesDTO>
@{
    ViewData["Title"] = "Search Page";
}
<style>
    .card {
        margin: 1em;
        box-shadow: 2px 6px 8px 0 rgba(22, 22, 26, 0.18);
        border: none;
    }

    .img-wrapper {
        max-width: 100%;
        height: 13em;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

        .img-wrapper img {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
        }

    .card img {
        max-height: 100%;
    }

    .pagination {
        justify-content: center;
        display: flex;
        list-style: none;
        padding: 0;
    }

        .pagination li {
            margin: 0 5px;
        }
</style>
@if (Model.ToList().Count == 0)
{
    <div class="row">
        <h1> No Results Found :(</h1>
        <div>
            <a asp-action="Index" class="btn btn-primary">Back to Home Page</a>
        </div>
    </div>

}
else{
    <div class="row">
        <h1>Your Search Results:</h1>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="img-wrapper">
                        <img src="@Url.Content($"~/{item.Image}")" alt="@item.BrandName">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.BrandName</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">@item.Price.ToString("C").Replace("$", "&#36;")</p>
                        <p class="card-text">Style: @item.Style</p>
                        <p class="card-text">Colour: @item.Colour</p>
                        <a asp-action="Details" asp-controller="Home" class="btn btn-primary" asp-route-id="@item.ID">Details</a>
                        <a asp-area="Member" asp-action="AddToCart" asp-controller="Home" class="btn btn-success" asp-route-id="@item.ID">Add to Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div>
        <a asp-action="Index" class="btn btn-primary">Back to Home Page</a>
    </div>

}
